<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.datastoragetest.ExternalStorage">

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviroment State" />

    <Button
        android:id="@+id/bt_mk_album_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_state"
        android:text="Create Album Directory"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/bt_mk_private_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_mk_album_dir"
        android:text="Create Private Directory"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/bt_mk_private_sd_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_mk_private_dir"
        android:text="Create Private SD Directory"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/bt_mk_cache_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_mk_private_sd_dir"
        android:text="Create Cache Directory"
        android:textAllCaps="false" />
</RelativeLayout>
