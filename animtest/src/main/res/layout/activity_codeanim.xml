<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XMLAnim Activity" />

    <Button
        android:id="@+id/bt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Animation Activity" />

    <Button
        android:id="@+id/bt_drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drawable Animation Activity" />

    <Button
        android:id="@+id/bt_transition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Layout Transition Activity" />

</LinearLayout>

