<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/activity_a"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.classtest.intent.AActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A Activity"
            android:textSize="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startActivityByComponentName"
            android:text="Start activity by set component name"
            android:textAllCaps="false"
            android:textSize="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startActivityBySetClass"
            android:text="Start activity by set class"
            android:textAllCaps="false"
            android:textSize="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startActivityBySetClassName"
            android:text="Start activity by set class name"
            android:textAllCaps="false"
            android:textSize="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startBActivityByAction"
            android:text="Start activity by Action"
            android:textAllCaps="false"
            android:textSize="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startActivityByDataAndType"
            android:text="Start activity by data and MIME"
            android:textAllCaps="false"
            android:textSize="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startActivityB"
            android:text="Start activity B"
            android:textAllCaps="false"
            android:textSize="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startActivityByChooser"
            android:text="Start activity by chooser"
            android:textAllCaps="false"
            android:textSize="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkAcitivty"
            android:text="Check Activity"
            android:textAllCaps="false"
            android:textSize="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="multipleFilter"
            android:text="Multiple Filter"
            android:textAllCaps="false"
            android:textSize="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startActivityByFilter"
            android:text="Start activity by filter"
            android:textAllCaps="false"
            android:textSize="25dp" />

        <Button
            android:textSize="25dp"
            android:textAllCaps="false"
            android:text="Start intent test activity"
            android:onClick="startIntentTestActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>
